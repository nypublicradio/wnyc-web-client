  {{#if isLoggedIn}}
    <div class="user-nav-logged-in">
      {{#click-outside action=(action (mut isPopupOpen) false)}}
        <button {{action (mut isPopupOpen) (not isPopupOpen)}} class="user-nav-button">
          <div class="user-nav-avatar">
          {{#if user.picture}}
            <img src={{user.picture}}>
          {{else}}
            {{nypr-svg icon="user"}}
          {{/if}}
          </div>
          <span class="user-nav-greeting">{{or user.givenName 'You'}}</span>
        </button>
        {{#if isPopupOpen}}
          <div class="user-nav-popup-caret">
            <span class="user-nav-popup-caret-outer"></span>
            <span class="user-nav-popup-caret-inner"></span>
          </div>
          <div class="user-nav-popup">
            <ul class="user-nav-list">
              <li class="user-nav-listitem" {{action (mut isPopupOpen) false}}>
                {{link-to 'Settings' 'settings'}}
              </li>
              <li class="user-nav-listitem" {{action (mut isPopupOpen) false}}>
                {{link-to 'Account' 'profile'}}
              </li>
              <li class="user-nav-listitem"><a href="/" title="Log out" {{action 'logout'}}>Log out</a></li>
            </ul>
          </div>
        {{/if}}
      {{/click-outside}}
    </div>
  {{else}}
    <div class="user-nav-signup user-nav-link">
      <a href='/signup'
        title="Sign up">Sign up</a>
    </div>
    <div class="user-nav-login user-nav-link">
      <a href='/login'
        title="Log in">Log in</a>
    </div>
  {{/if}}
