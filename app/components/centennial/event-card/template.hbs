<div class="event-card">
  <div class="event-card__image-wrapper">
    {{#if image}}
    <a href={{eventUrl}} class="event-card__image">
      <img alt="{{event.attributes.title}}"
        src="{{image-template image.template 230 148 image.crop}}"
        srcset="{{image-template image.template 460 296 image.crop}} 2x,
          {{image-template image.template 690 444 image.crop}} 3x"
        width="230" height="148">
    </a>
    {{/if}}
    <div class="event-card__date">
      <span class="event-card__day">{{day}}</span>
      <span class="event-card__month">{{month}}</span>
    </div>
  </div>
  <div class="event-card__details">
    <h3 class="event-card__title"><a href={{eventUrl}}>{{event.attributes.title}}</a></h3>
    <div class="event-card__time">{{startTime}}</div>
    <div class="event-card__tags">
      {{#if isLiveStream}}
        <span class="event-card__tag mod-live-stream">Live Stream</span>
      {{/if}}
      {{#if isInPerson}}
       <span class="event-card__tag mod-in-person">In-Person</span>
      {{/if}}
    </div>
    <div class="event-card__description">{{{event.attributes.lede}}}</div>
  </div>
  <div class="event-card__arrow">
    <a href="{{eventUrl}}" class="event-card__link">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
<path opacity="0.6" fill-rule="evenodd" clip-rule="evenodd" d="M6.22492 21.7225C5.71885 21.1996 6.22492 20.7422 6.22492 20.7422L14.8985 11.771L6.63557 3.22504C6.63557 3.22504 6.20588 2.68916 6.66745 2.21217C7.12863 1.73478 7.77288 2.21217 7.77288 2.21217L17 11.7871L7.25204 21.8692C7.25204 21.8692 6.73022 22.2451 6.22492 21.7225Z" fill="black"/>
</svg>
    </a>
  </div>

</div>