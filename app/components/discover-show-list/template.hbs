{{#multiselect-checkboxes
  options=shows
  selection=selectedShowSlugs
  valueProperty='slug'
  tagName='div'
  onchange=(action 'onMultiselectChangeEvent') as |show isSelected|}}

  {{discover-show
    title=show.title
    slug=show.slug
    isSelected=isSelected
    imageTemplate=show.image.template
    class='gtm__click-tracking'
    data-action='Discover'
    data-label=(concat (if isSelected 'Deselected Show ' 'Selected Show ') show.title)
  }}
{{/multiselect-checkboxes}}
