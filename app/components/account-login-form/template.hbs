<form class="account-form" {{action 'login' on='submit'}}>
  <h2 class="account-form-heading">Log in to WNYC</h2>

  <button class="account-form-btn fb-btn"><i class="fa fa-facebook-official fa-2x"></i> Log in with Facebook</button>

  <div placeholder="you@email.com" class="account-form-separator">or</div>

  {{fancy-input
    label='Email'
    type='text'
    placeholder='you@email.com'
    fieldname='email'
    value=changeset.email
    errors=changeset.error.email.validation
    submitted=submitTried
  }}

  {{fancy-input
    label='Password'
    type='password'
    placeholder='Enter password'
    fieldname='password'
    value=changeset.password
    errors=changeset.error.password.validation
    helplinkUrl='/forgot'
    helplinkText='Forgot Password?'
    submitted=submitTried
  }}

  <button type="submit" class="account-form-btn" disabled={{isProcessing}}>Log in</button>
</form>